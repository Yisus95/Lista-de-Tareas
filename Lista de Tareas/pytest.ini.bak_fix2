[pytest]
# Django settings (ajustado a la estructura del repo)
DJANGO_SETTINGS_MODULE = proyecto.proyecto.settings

# Qu√© archivos/patrones contienen tests en tu proyecto
python_files = tests.py test_*.py *_tests.py

# Evitar que pytest recorra directorios no relevantes (incluye .venv)
norecursedirs = .git .venv venv env build dist .tox node_modules
